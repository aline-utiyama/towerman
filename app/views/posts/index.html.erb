<div class="container post-container">
  <div class="white-card">
    <%= simple_form_for @post do |f| %>
      <%= f.input :comment %>
      <div class="post-upload">
        <div class="avatar-preview">
          <div id="imagePreview" style="background-image: url(http://i.pravatar.cc/500?img=7);">
          </div>
        </div>
        <div class="photo-submit-btn">
          <%= f.input :photo, as: :file, input_html: {accept: ('.png, .jpg, .jpeg'), id: 'imageUpload'}%>
          <a class="btn"><i class="fas fa-camera"></i></a>
        </div>
        <%= f.submit class: 'main-button' %>
      </div>
    <% end %>
  </div>
  <% @posts.each do |post| %>
    <div class="white-card">
      <div class="user-post-info">
        <%= cl_image_tag post.user.photo.key , class: 'avatar'%>
        <h5><%= post.user.username %></h5>
      </div>
      <div class="post-content">
        <%= post.comment %>
      </div>
      <div>
        <% if post.photo.attached? %>
          <%= cl_image_tag post.photo.key, class: 'post-img' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>