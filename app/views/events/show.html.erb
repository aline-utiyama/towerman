<div class="container event-page">
  <div class="event-image">
    <img src="https://image.freepik.com/free-vector/children-playground-concept_74855-7006.jpg" alt="">
  </div>
  <div class="d-flex align-items-center event-heading">
    <h1><%= @event.title %></h1>
    <span id="event-date"><%= @event.date_time.strftime("%b %y, %H:%M") %></span>
  </div>
  <div class="event-host">
    <h5>Host: </h5>
    <p> <%= @event.user.username %></p>
  </div>
  <div class="event-details">
    <h5>Details:</h5>
    <p class="content"><%= @event.details %></p>
  </div>
</div>