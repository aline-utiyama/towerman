<div class="container">
  <h1>Create a new Event</h1>
  <%= simple_form_for @event do |f| %>
    <%= f.input :title %>
    <%= f.input :date_time, html5: true %>
    <%= f.input :image, as: :file %>
    <%= f.input :details %>
    <%= f.input :capacity %>
    <%= f.submit class: 'main-button'%>
  <% end %>
</div>