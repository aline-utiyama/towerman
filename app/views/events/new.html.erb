<div class="container">
  <div class="event-form">
    <h1>Create a new Event</h1>
    <%= simple_form_for @event do |f| %>
      <%= f.input :title %>
      <%= f.input :date_time, html5: true %>
      <%= f.input :photo, as: :file %>
      <%= f.input :location, :label => "Meeting Spot" %>
      <%= f.input :duration %>
      <%= f.input :details %>
      <%= f.input :capacity %>
      <%= f.submit class: 'main-button'%>
    <% end %>
    <%= link_to "Back", :back %>
  </div>
</div>